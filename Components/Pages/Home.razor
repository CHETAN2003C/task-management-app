@page "/"

<PageTitle>Home</PageTitle>

<div class="text-center py-5">
    <h1 class="display-3 fw-bold text-primary mb-4">
        <i class="bi bi-check2-square" style="font-size: 4rem;"></i>
        <br />
        Task Management App
    </h1>
    <p class="lead text-muted mb-5">Organize, track, and complete your tasks efficiently</p>
    
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="mb-4">Welcome to Your Task Manager</h2>
                    <p class="text-muted mb-4">A modern Blazor Server application to help you stay organized and productive.</p>
                    
                    <a href="/tasks" class="btn btn-primary btn-lg">
                        <i class="bi bi-arrow-right-circle me-2"></i>Get Started
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4 text-start">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-primary mb-3">
                        <i class="bi bi-plus-circle" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Create Tasks</h5>
                    <p class="card-text text-muted">Quickly add new tasks with titles, descriptions, priorities, and due dates.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-success mb-3">
                        <i class="bi bi-list-check" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Track Progress</h5>
                    <p class="card-text text-muted">Monitor task status: Pending, In Progress, or Completed.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-info mb-3">
                        <i class="bi bi-funnel" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Filter & Search</h5>
                    <p class="card-text text-muted">Easily find tasks with powerful filtering and search capabilities.</p>
                </div>
            </div>
        </div>
    </div>
</div>

