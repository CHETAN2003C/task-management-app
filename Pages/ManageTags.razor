@page "/tags"
@using TaskManagementApp.Models
@using TaskManagementApp.Services
@inject TagService TagService
@inject NavigationManager Navigation

<PageTitle>Manage Tags</PageTitle>

<div class="tag-management-container">
    <div class="header-section">
        <h1>üè∑Ô∏è Manage Tags</h1>
        <button class="btn btn-primary" @onclick="ShowCreateForm">
            ‚ûï Create Tag
        </button>
    </div>

    @if (showForm)
    {
        <div class="form-overlay" @onclick="HideForm"></div>
        <div class="modal-form">
            <div class="form-header">
                <h2>@(isEditing ? "Edit Tag" : "Create Tag")</h2>
                <button class="btn-close" @onclick="HideForm">‚úï</button>
            </div>

            <EditForm Model="@currentTag" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-group">
                    <label for="name">Tag Name *</label>
                    <InputText id="name" class="form-control" @bind-Value="currentTag.Name" placeholder="Enter tag name" />
                    <ValidationMessage For="@(() => currentTag.Name)" />
                </div>

                <div class="form-group">
                    <label for="color">Color</label>
                    <InputText type="color" id="color" class="form-control color-picker" @bind-Value="currentTag.Color" />
                    <ValidationMessage For="@(() => currentTag.Color)" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">@(isEditing ? "Update" : "Create")</button>
                    <button type="button" class="btn btn-secondary" @onclick="HideForm">Cancel</button>
                </div>
            </EditForm>
        </div>
    }

    @if (tags.Any())
    {
        <div class="tags-container">
            @foreach (var tag in tags)
            {
                <div class="tag-item" style="background-color: @tag.Color;">
                    <div class="tag-content">
                        <span class="tag-name">@tag.Name</span>
                        <span class="task-count">@tag.Tasks.Count</span>
                    </div>
                    <div class="tag-actions">
                        <button class="btn-icon-small" @onclick="() => EditTag(tag)" title="Edit">‚úèÔ∏è</button>
                        <button class="btn-icon-small" @onclick="() => DeleteTag(tag.Id)" title="Delete">üóëÔ∏è</button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">üè∑Ô∏è</div>
            <h3>No tags yet</h3>
            <p>Create your first tag to label your tasks!</p>
            <button class="btn btn-primary" @onclick="ShowCreateForm">
                ‚ûï Create Tag
            </button>
        </div>
    }
</div>

@code {
    private List<Tag> tags = new();
    private Tag currentTag = new();
    private bool showForm = false;
    private bool isEditing = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        tags = await TagService.GetAllTagsAsync();
    }

    private void ShowCreateForm()
    {
        currentTag = new Tag { Color = "#6c757d" };
        isEditing = false;
        showForm = true;
    }

    private void EditTag(Tag tag)
    {
        currentTag = new Tag
        {
            Id = tag.Id,
            Name = tag.Name,
            Color = tag.Color
        };
        isEditing = true;
        showForm = true;
    }

    private void HideForm()
    {
        showForm = false;
        currentTag = new Tag();
    }

    private async Task HandleSubmit()
    {
        if (isEditing)
        {
            await TagService.UpdateTagAsync(currentTag);
        }
        else
        {
            await TagService.CreateTagAsync(currentTag);
        }

        await LoadTags();
        HideForm();
    }

    private async Task DeleteTag(int tagId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this tag?"))
        {
            await TagService.DeleteTagAsync(tagId);
            await LoadTags();
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
