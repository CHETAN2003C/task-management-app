@page "/categories"
@using TaskManagementApp.Models
@using TaskManagementApp.Services
@inject CategoryService CategoryService
@inject NavigationManager Navigation

<PageTitle>Manage Categories</PageTitle>

<div class="category-management-container">
    <div class="header-section">
        <h1>üóÇÔ∏è Manage Categories</h1>
        <button class="btn btn-primary" @onclick="ShowCreateForm">
            ‚ûï Create Category
        </button>
    </div>

    @if (showForm)
    {
        <div class="form-overlay" @onclick="HideForm"></div>
        <div class="modal-form">
            <div class="form-header">
                <h2>@(isEditing ? "Edit Category" : "Create Category")</h2>
                <button class="btn-close" @onclick="HideForm">‚úï</button>
            </div>

            <EditForm Model="@currentCategory" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-group">
                    <label for="name">Category Name *</label>
                    <InputText id="name" class="form-control" @bind-Value="currentCategory.Name" placeholder="Enter category name" />
                    <ValidationMessage For="@(() => currentCategory.Name)" />
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <InputTextArea id="description" class="form-control" @bind-Value="currentCategory.Description" 
                                  placeholder="Enter description (optional)" rows="3" />
                    <ValidationMessage For="@(() => currentCategory.Description)" />
                </div>

                <div class="form-group">
                    <label for="color">Color</label>
                    <InputText type="color" id="color" class="form-control color-picker" @bind-Value="currentCategory.Color" />
                    <ValidationMessage For="@(() => currentCategory.Color)" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">@(isEditing ? "Update" : "Create")</button>
                    <button type="button" class="btn btn-secondary" @onclick="HideForm">Cancel</button>
                </div>
            </EditForm>
        </div>
    }

    @if (categories.Any())
    {
        <div class="categories-grid">
            @foreach (var category in categories)
            {
                <div class="category-card" style="border-left-color: @category.Color;">
                    <div class="category-info" @onclick="() => ViewCategoryTasks(category.Id)" style="cursor: pointer;">
                        <div class="category-color" style="background-color: @category.Color;"></div>
                        <div class="category-details">
                            <h3>@category.Name</h3>
                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p>@category.Description</p>
                            }
                            <span class="task-count">@category.Tasks.Count task(s)</span>
                        </div>
                    </div>
                    <div class="category-actions">
                        <button class="btn-icon" @onclick="() => CreateTaskForCategory(category.Id)" title="Add Task">
                            ‚ûï
                        </button>
                        <button class="btn-icon" @onclick="() => EditCategory(category)" title="Edit">
                            ‚úèÔ∏è
                        </button>
                        <button class="btn-icon delete" @onclick="() => DeleteCategory(category.Id)" title="Delete">
                            üóëÔ∏è
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">üóÇÔ∏è</div>
            <h3>No categories yet</h3>
            <p>Create your first category to organize your tasks!</p>
            <button class="btn btn-primary" @onclick="ShowCreateForm">
                ‚ûï Create Category
            </button>
        </div>
    }
</div>

@code {
    private List<Category> categories = new();
    private Category currentCategory = new();
    private bool showForm = false;
    private bool isEditing = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        categories = await CategoryService.GetAllCategoriesAsync();
    }

    private void ShowCreateForm()
    {
        currentCategory = new Category { Color = "#4a90e2" };
        isEditing = false;
        showForm = true;
    }

    private void EditCategory(Category category)
    {
        currentCategory = new Category
        {
            Id = category.Id,
            Name = category.Name,
            Description = category.Description,
            Color = category.Color
        };
        isEditing = true;
        showForm = true;
    }

    private void HideForm()
    {
        showForm = false;
        currentCategory = new Category();
    }

    private async Task HandleSubmit()
    {
        if (isEditing)
        {
            await CategoryService.UpdateCategoryAsync(currentCategory);
        }
        else
        {
            await CategoryService.CreateCategoryAsync(currentCategory);
        }

        await LoadCategories();
        HideForm();
    }

    private async Task DeleteCategory(int categoryId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this category? Tasks will not be deleted."))
        {
            await CategoryService.DeleteCategoryAsync(categoryId);
            await LoadCategories();
        }
    }

    private void CreateTaskForCategory(int categoryId)
    {
        Navigation.NavigateTo($"/tasks/create?categoryId={categoryId}");
    }

    private void ViewCategoryTasks(int categoryId)
    {
        Navigation.NavigateTo($"/tasks?categoryId={categoryId}");
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
